#!/usr/bin/env python3
"""
Benchmon config script

This script locates the installation path of the Benchmon Python package
and prints a shell export command to access it from batch scripts.
"""

import os
import benchmon

# Print shell export to make BENCHMON_LIB_PATH accessible in calling shell
BENCHMON_LIB_PATH=os.path.dirname(benchmon.__file__)
print(f'export BENCHMON_LIB_PATH="{BENCHMON_LIB_PATH}"')
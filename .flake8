[flake8]

max-line-length = 120
extend-ignore = E303, E731, C416, D400, D205, D202, D200, W503
# E731: using lambdas
# E303: too many blank lines (between functions)
# D400: should end with a period
# D205: 1 blank line required between summary line and description
# D202: No blank lines allowed after function docstring
# D200: One-line docstring should fit on one line with quotes
# W503: line break before binary operator

select = C,E,F,W,B,B950,J,N,I,D
import-order-style = pep8
require-blank-line-before-return = True
docstring-min-length = 15 # @hc

exclude =
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    venv,
    .mypy_cache,
    .pytest_cache
    mytest

per-file-ignores =
    __init__.py: F401, D104
